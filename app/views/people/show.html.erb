<div style="width:50%;">
<%- model_class = Person -%>
<div class="page-header">
<div style="position:relative;margin-left:15%;">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @person.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qualification) %>:</strong></dt>
  <dd><%= @person.qualification %></dd>
  <dt><strong>Belongs to:</strong></dt>
  <dd><b><%= "group :" %></b><%= "#{@person.group.name} (" %> <b><%= "ORG :" %> </b><%= "#{@person.group.organization.name})" %></dd>
  <dt><strong>Skills:</strong></dt>
  <dd><% @person.skills.each do |skill| %>
         <%= skill.name %><br />
      <% end %>
  </dd>
  <dt><strong>To-dos:</strong></dt>
  <dd><table>
  <% @person.todos.each do |todo| %>
  <tr><td><b><%= "task :" %></b><%= "#{todo.task}" %></td><td>&nbsp;&nbsp;&nbsp;</td><td><b><%= "description :" %> </b><%= "#{todo.description}" %></td></tr>
  <% end %></table>
  </dd>
</dl>

<div style="position:relative;margin-left:15%;">
<%= link_to t('.back', :default => t("helpers.links.back")),
              people_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_person_path(@person), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              person_path(@person),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
