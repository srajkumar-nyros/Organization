<div class="page-header">
  <h2>Sign up</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="control-group"><%= f.label :email %>
  <div class="controls">
  <%= f.email_field :email, autofocus: true, :class => 'form-control', style: "width:50%" %>
    </div>
  <% if resource.errors.any? %>
    <% resource.errors.full_messages.each do |message| %>
        <% if message=~ /Email.*/ %>
        <p style="color:red;"><%= message %></p>
        <% end %>
    <% end %>
    <% end %>
    </div>
    <br />
  <div class="control-group"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <div class="controls"><%= f.password_field :password, autocomplete: "off", :class => 'form-control', style: "width:50%" %></div>
   <% if resource.errors.any? %>
    <% resource.errors.full_messages.each do |message| %>
        <% if message=~ /Password.*/ %>
        <p style="color:red;"><%= message %></p>
        <% end %>
    <% end %>
    <% end %></div><br />
  <div class="control-group"><%= f.label :password_confirmation %>
  <div class="controls">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', style: "width:50%" %>
    </div>
    </div>
    <br />

  <%= f.submit "Sign up", :class => 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
