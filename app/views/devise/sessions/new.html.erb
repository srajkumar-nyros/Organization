<div class="page-header">
  <h2>Log in</h2>
</div>
<% if ((!alert.nil?)&&!(alert=~ /Invalid.*/)) %>
<p><%= alert %></p>
<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<% if ((!alert.nil?)&&(alert=~ /Invalid.*/)) %>
<p style="color:red"><%= alert %></p>
<% end %>
  <div class="control-group"><%= f.label :email %>
  <div class="controls">
  <%= f.email_field :email, autofocus: true, :class => 'form-control', style: "width:50%"  %>
  </div>
  </div>
  <br/>
  <div class="control-group"><%= f.label :password %>
  <div class="controls">
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control', style: "width:50%"  %>
    </div>
    </div>
  <br/>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  
  <%= f.submit "Log in", :class => 'btn btn-primary' %>
<% end %>
<br />
<%= render "devise/shared/links" %>
