<div style="width:50%;">
<%- model_class = Organization -%>
<div class="page-header">
<div style="position:relative;margin-left:15%;">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @organization.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @organization.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @organization.description %></dd>
  <dt><strong>Groups:</strong></dt>
  <dd><% @organization.groups.each do |group| %>
         <%= group.name %><br />
      <% end %>
  </dd>
  <dt><strong>People:</strong></dt>
  <dd><table><% @organization.groups.each do |group| %>
         <% group.people.each do |person| %>
           <tr>
           <td><%= person.name %></td><td>(<b>GROUP :</b><%= "#{group.name})" %></td>
           </tr>
         <% end %>
      <% end %></table>
  </dd>
</dl>

<div style="position:relative;margin-left:15%;">
<%= link_to t('.back', :default => t("helpers.links.back")),
              organizations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_path(@organization), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_path(@organization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
